<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="储物柜状态"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />



        <!-- 状态指示器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 空闲指示 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:background="#4CAF50"
                    android:radius="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空闲"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 占用指示 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:background="#F44336"
                    android:radius="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占用"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 放在标题栏后，用于显示传入的 mode 与 userId -->
    <TextView
        android:id="@+id/tv_cabinet_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模式: 未知\n用户: 未识别"
        android:textSize="16sp"
        android:textColor="#333333"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"/>


    <!-- 储物柜列表 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行储物柜 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- 1号柜 - 空闲 -->
                <LinearLayout
                    android:id="@+id/ll_locker1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:background="#E8F5E8"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:radius="12dp">

                    <TextView
                        android:id="@+id/tv_locker1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1号柜"
                        android:textColor="#1B5E20"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_locker1_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空闲"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- 2号柜 - 占用 -->
                <LinearLayout
                    android:id="@+id/ll_locker2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#FFEBEE"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:radius="12dp">

                    <TextView
                        android:id="@+id/tv_locker2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2号柜"
                        android:textColor="#B71C1C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_locker2_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="占用"
                        android:textColor="#F44336"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- 可以继续添加更多储物柜行 -->

        </LinearLayout>
    </ScrollView>

    <!-- 底部统计信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:radius="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总计: 2个"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="空闲: 1个"
            android:textColor="#4CAF50"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="占用: 1个"
            android:textColor="#F44336"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>