            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textColor="#666666"
            android:textSize="16sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- 统计信息卡片 -->
    <LinearLayout
